          "raw": "{\n  \"tag\": \"#pricing\",\n  \"title\": \"Pricing Information\",\n  \"message\": \"Our pricing starts at $29/month for the basic plan, $79/month for professional, and $149/month for enterprise. Would you like more details about any specific plan?\",\n  \"category\": \"Sales\",\n  \"isActive\": true,\n  \"createdBy\": \"{{agent_id}}\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/v1/canned-responses",
          "host": ["{{base_url}}"],
          "path": ["v1", "canned-responses"]
        },
        "description": "Create a new canned response with tag, title, message, category, and active status"
