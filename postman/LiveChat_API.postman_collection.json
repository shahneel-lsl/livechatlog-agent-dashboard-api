      "item": [
        {
          "name": "Create Widget Session (Public)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('conversation_id', jsonData.conversationId);",
